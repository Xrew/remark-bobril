{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "skipLibCheck": true,
    "allowJs": true,
    "lib": [
      "es5",
      "dom",
      "es2015.core",
      "es2015.promise"
    ],
    "removeComments": false,
    "noLib": false,
    "preserveConstEnums": false,
    "experimentalDecorators": true,
    "outDir": "build"
  },
  "include": [
    "src/**/*"
  ]
}
