    "postrelease" : "gulp copy",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "bobril": "*",
    "remark": "*"
  },
  "devDependencies": {
    "@types/jest": "*",
    "gulp": "*",
    "gulp-cli": "^1.4.0",
    "jest": "*",
    "rimraf": "*",
    "tsutils": "*",
    "typescript": "*"
  }
}
